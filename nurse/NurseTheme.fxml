<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="rootPanel" prefHeight="310.0" prefWidth="392.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HMS.nurse.NurseController">
    <stylesheets>
        <URL value="@nursetheme.css" />
    </stylesheets>
   <children>
      <VBox prefHeight="334.0" prefWidth="392.0">
         <children>
            <TextField fx:id="nurseId" alignment="CENTER" onKeyReleased="#controlData" promptText="Nurse ID">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="nurseName" alignment="CENTER" layoutX="20.0" layoutY="30.0" promptText="Nurse Name">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="nurseSurname" alignment="CENTER" layoutX="20.0" layoutY="75.0" promptText="Nurse Surname">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="nurseExp" alignment="CENTER" layoutX="20.0" layoutY="120.0" onKeyReleased="#controlExpData" promptText="Nurse Experience">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <HBox prefHeight="64.0" prefWidth="392.0">
               <children>
                  <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#addNurse" prefHeight="44.0" prefWidth="178.0" style="-fx-background-color: #2196F3;" text="Save" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="30.0" right="30.0" />
                     </HBox.margin>
                     <opaqueInsets>
                        <Insets right="30.0" />
                     </opaqueInsets>
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#cancel" prefHeight="44.0" prefWidth="175.0" style="-fx-background-color: #2196F3;" text="Cancel" textFill="WHITE">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="50.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
